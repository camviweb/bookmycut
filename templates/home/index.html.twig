{% extends 'base.html.twig' %}

{% block title %}BookMyCut - Salon de Coiffure{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}
    <div class="hero text-center">
        <div>
            <h1>Bienvenue chez BookMyCut</h1>
            <p>Des services de coiffure de qualité pour vous sublimer.</p>
            <a class="btn btn-danger btn-lg" href="{{ path('app_reservations') }}">Réservez votre rendez-vous</a>
        </div>
    </div>

    <div class="services">
        <div class="container my-5">
            <h2 class="text-center text-danger mb-4">Nos Services</h2>
            <div class="row">
                {% for service in services %}
                    <div class="col-md-4">
                        <div class="card mb-4" style="height: 180px;">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title">{{ service.name }}</h5>
                                    <p class="card-text">{{ service.description }}</p>
                                </div>
                                {# <a class="btn btn-danger" href="{{ path('service_details', {'slug': service.slug}) }}">Détails</a> #}
                                <a class="btn btn-danger" href="{{ path('app_services') }}">Détails</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="avis">
        <div class="container my-5">
            <h2 class="text-center text-primary mb-4">Avis de nos clients</h2>
            <div class="row justify-content-center overflow-hidden">
                <div class="col-12">
                    <div class="testimonial-wrapper d-flex overflow-hidden">
                        {% for unAvis in avis %}
                            <div class="testimonial-card" style="margin: 0 10px; padding-top: 5px;">
                                <div class="card shadow-sm">
                                    <div class="card-body text-center" style="height: 150px; width: 300px;">
                                        <h5>{{ unAvis.user.firstName }} {{ unAvis.user.lastName }}</h5>
                                        <p class="fst-italic">"{{ unAvis.feedback }}"</p>
                                        <div>
                                            <span class="badge bg-warning text-dark">{{ unAvis.rating }} ★</span>
                                            <span class="text-muted ms-2">{{ unAvis.date|date('j F Y') }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
