{% extends 'base.html.twig' %}

{% block title %}Admin - Dashboard
{% endblock %}

{% block body %}

	<style>
		.card {
			border: none;
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}

		.card:hover {
			transform: translateY(-5px);
			box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
		}
	</style>
	
	<div class="container my-5">
		<h1 class="text-center text-danger fw-bold">Dashboard</h1>
		<p class="text-center fs-5 text-muted">Gérez votre salon de coiffure avec facilité.</p>

		<div class="row mt-4 g-4">
			{% for card in cards %}
				<div class="col-md-4">
					<div class="card border-danger shadow-sm h-100">
						<div class="card-body d-flex flex-column text-center">
							<div class="mb-3">
								<i class="bi {{ card.icon }} fs-1 text-danger"></i>
							</div>
							<h5 class="card-title fw-semibold">{{ card.title }}</h5>
							<p class="card-text flex-grow-1">{{ card.description }}</p>
							<a href="{{ card.link }}" class="btn btn-danger mt-auto">{{ card.button_text }}</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
