{% extends 'base.html.twig' %}

{% block title %}Admin - Dashboard{% endblock %}

{% block stylesheets %}
    <style>
        .card {
            border: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
    </style>
{% endblock %}

{% block body %}
    <section class="container my-5" role="region" aria-label="Tableau de bord administratif">
        <h1 class="text-center text-danger fw-bold">Dashboard</h1>
        <p class="text-center fs-5 text-muted">Gérez votre salon de coiffure avec facilité.</p>

        <div class="row mt-4 g-4">
            {% for card in cards %}
                <div class="col-md-4">
                    <div class="card border-danger shadow-sm h-100">
                        <div class="card-body d-flex flex-column text-center">
                            <div class="mb-3" aria-hidden="true">
                                <i class="bi {{ card.icon }} fs-1 text-danger" aria-hidden="true"></i>
                            </div>
                            <h2 class="card-title fw-semibold h5">{{ card.title }}</h2>
                            <p class="card-text flex-grow-1">{{ card.description }}</p>
                            <a href="{{ path(card.link) }}" class="btn btn-danger mt-auto" role="button">{{ card.button_text }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
