{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center text-danger fw-bold">Dashboard</h1>
        <p class="text-center fs-5 text-muted">Gérez votre salon de coiffure avec facilité.</p>

        <div class="row mt-4 g-4">
            <div class="col-md-4">
                <div class="card border-danger shadow-sm h-100">
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title fw-semibold">Gestion des Stocks</h5>
                        <p class="card-text flex-grow-1">Consultez et mettez à jour les stocks de produits.</p>
                        <a href="{{ path('app_admin_stock') }}" class="btn btn-danger mt-auto">Voir les stocks</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-danger shadow-sm h-100">
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title fw-semibold">Réservations</h5>
                        <p class="card-text flex-grow-1">Gérez les rendez-vous des clients.</p>
                        <a href="#" class="btn btn-danger mt-auto">Voir les réservations</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-danger shadow-sm h-100">
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title fw-semibold">Utilisateurs</h5>
                        <p class="card-text flex-grow-1">Gérez les comptes des clients et employés.</p>
                        <a href="#" class="btn btn-danger mt-auto">Gérer les utilisateurs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
