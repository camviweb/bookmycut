{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <style>
        .required-star {
            color: red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="p-5 mx-auto" style="max-width: 600px; background: transparent; box-shadow: none;">
        <h3 class="text-center mb-3">Créer un compte</h3>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error|raw }}  <!-- Affiche les erreurs globales -->
            </div>
        {% endif %}

        <p class="text-center mb-3">Déjà inscrit ?
            <a href="{{ path('app_login') }}" style="color:black">Se connecter</a>
        </p>

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="name">Nom <span class="required-star">*</span></label>
                {{ form_widget(form.name) }}
            </div>
            <div class="col-md-6 mb-3">
                <label for="surname">Prénom <span class="required-star">*</span></label>
                {{ form_widget(form.surname) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="email">Email <span class="required-star">*</span></label>
                {{ form_widget(form.email) }}
            </div>
            <div class="col-md-6 mb-3">
                <label for="phone">Numéro de téléphone <span class="required-star">*</span></label>
                {{ form_widget(form.phone) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="password.first">Mot de passe <span class="required-star">*</span></label>
                {{ form_widget(form.password.first) }}
            </div>
            <div class="col-md-6 mb-3">
                <label for="password.second">Confirmer le mot de passe <span class="required-star">*</span></label>
                {{ form_widget(form.password.second) }}
            </div>
        </div>

        <div class="text-center">
            {{ form_row(form.submit) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
