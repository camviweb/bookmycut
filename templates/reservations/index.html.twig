{% extends 'base.html.twig' %}

{% block title %}Réservations
{% endblock %}

{% block body %}
	<!-- Bootstrap & jQuery -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

	<!-- jQuery UI -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>


	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.calendrier {
			margin-top: 20px;
			display: flex;
			gap: 20px;
		}
		.calendrier ul {
			list-style-type: none;
			padding: 0;
		}
		.calendrier li {
			padding: 10px;
			border: 1px solid #ccc;
			margin-bottom: 5px;
			background-color: #f9f9f9;
			cursor: pointer;
		}
		.calendrier li:hover {
			background-color: #e9ecef;
		}
	</style>

	<script>
		var $j = jQuery.noConflict();

// Initialisation du Datepicker
$j(document).ready(function () {
if ($j("#datepicker").length) {
$j("#datepicker").datepicker({
dateFormat: "yy-mm-dd", // Format de la date (année-mois-jour)
firstDay: 1, // Le premier jour de la semaine est lundi
showOtherMonths: true, // Affiche les autres mois dans le calendrier
selectOtherMonths: true // Permet de sélectionner les jours d'autres mois
});
} else {
console.error('L\'élément #datepicker n\'a pas été trouvé');
}
});
	</script>

	<div class="example-wrapper">
		<h1 class="text-danger">1. Choisir une prestation</h1>
		<div class="mb-3">
			<select class="form-select" id="prestationSelect">
				<option selected>Choisissez une prestation</option>
				<option value="prestation_1">Prestation 1</option>
				<option value="prestation_2">Prestation 2</option>
				<option value="prestation_3">Prestation 3</option>
			</select>
		</div>
		<h1 class="text-danger">2. Choisir une date et une heure</h1>

		<div class="calendrier">
			<div id="datepicker"></div>
			<ul>
				<li>2025-02-09 10:00</li>
				<li>2025-02-09 14:00</li>
				<li>2025-02-10 09:00</li>
				<li>2025-02-10 15:00</li>
			</ul>
		</div>
	</div>
{% endblock %}
